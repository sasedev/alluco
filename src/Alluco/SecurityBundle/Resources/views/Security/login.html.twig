{%extends 'AllucoSecurityBundle::security.html.twig'%}
{%block breadcrumbcnt%}
<li><a href="{{ path('_front_homepage') }}">{{ faIco('home') }} &nbsp; {{ root.breadcrumbTrans }}</a></li>
<li class="active"><a href="{{ path('_security_login') }}"> {{ staticpage.breadcrumbTrans }}</a></li>
{%endblock breadcrumbcnt%}
{%block content%}
{%include 'SasedevCommonsBootstrapBundle::flash.html.twig' with { 'close': false }%}
{{form_start(LoginForm, {'method':'POST', 'action': path('_security_check'), 'style': 'horizontal', 'attr': {'class': 'contact-form', 'role': 'form' } })}}
    {{form_row(LoginForm.username, {'label_col': 3, 'widget_col': 8, 'attr': {'placeholder': '_security.username.placeholder'} })}}
    {{form_row(LoginForm.password, {'label_col': 3, 'widget_col': 8, 'attr': {'placeholder': '_security.password.placeholder'} })}}
    {{form_row(LoginForm.target_path, {'label_col': 12, 'widget_col': 0})}}
    <br>
    {{form_row(LoginForm.submit, {'label_col': 3, 'widget_col': 4, 'attr': {'class': 'btn-block btn btn-primary'} })}}
    {{form_row(LoginForm.reset, {'label_col': 3, 'widget_col': 4, 'attr': {'class': 'btn-block btn btn-primary'} })}}
    <hr>
    <div class="form-group"><div class="col-lg-offset-3 col-lg-4"><a href="{{path('_security_lost_password')}}" class="btn-block btn btn-primary">{{ 'action.btnLostpass'|trans }}</a></div></div>
    <div class="form-group"><div class="col-lg-offset-3 col-lg-4"><a href="{{path('_security_register')}}" class="btn-block btn btn-primary">{{ 'action.btnRegister'|trans }}</a></div></div>
{{form_end(LoginForm)}}
{%endblock content%}