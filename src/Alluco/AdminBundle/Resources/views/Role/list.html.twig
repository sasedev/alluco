{% extends 'AllucoAdminBundle::template.html.twig' %}
{%block static_css%}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="{{asset('bundles/allucores/css/dataTables/dataTables.bootstrap.css')}}">
<link rel="stylesheet" type="text/css" href="{{asset('bundles/allucores/css/bootstrap/modal/2.2.5-bs3patch.css')}}">
<link rel="stylesheet" type="text/css" href="{{asset('bundles/allucores/css/bootstrap/modal/2.2.5.css')}}">
{%endblock static_css%}
{%block end_static_js%}
{{ parent() }}
<script type="text/javascript" src="{{asset('bundles/allucores/js/dataTables/jquery.dataTables.js')}}"></script>
<script type="text/javascript" src="{{asset('bundles/allucores/js/dataTables/dataTables.bootstrap.js')}}"></script>
<script type="text/javascript" src="{{asset('bundles/allucores/js/bootstrap/modal/2.2.5manager.js')}}"></script>
<script type="text/javascript" src="{{asset('bundles/allucores/js/bootstrap/modal/2.2.5.js')}}"></script>
{%endblock end_static_js%}
{%block end2_dynamic_jstxt%}
$(function() {
    {% if roles|length != 0 %}
    $('#roleList').dataTable({
        {%if app.request.locale != 'en'%}
        "language": {"url": '{{asset('bundles/allucores/css/dataTables/i18n/')~app.request.locale~".json"}}'},
        {% endif %}
        "columns": [
            null,
            null,
            null,
            null,
            null,
            { "searchable": false, "sortable": false }
        ]
    });
    {% endif %}
    $('.deleteConfirmRole').click(function(e) {
        e.preventDefault();
        var lnk = $(this).attr('href');
        modalDeleteBtn = $('#deleteConfirmRole').find('.danger');
        modalDeleteBtn.attr('href', lnk);
        $('#deleteConfirmRole').modal('show');
    });
});
{%endblock end2_dynamic_jstxt%}
{%block breadcrumb%}
<ol class="breadcrumb">
    <li><a href="{{ path('_admin_homepage') }}">{{ faIco('dashboard') }} &nbsp; {{'Breadcrumb.admin.home'|trans|raw}}</a></li>
    <li class="active"><a href="{{ path('_admin_role_list') }}">{{faIco('flash')}} &nbsp; {{'Breadcrumb.admin.role.list'|trans|raw}}</a></li>
</ol>
{%endblock breadcrumb%}
{%block content%}
<div class="row">
    <div class="col-lg-12">
        <div class="well well-sm text-right">
            <a href="{{ path('_admin_role_addGet') }}" class="btn btn-primary">{{ glyphIco('plus') }} {{ 'Action.add'|trans }}</a>
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ 'Role.tlabel.list'|trans|raw}}</h3>
            </div>
            <div class="box-body table-responsive">
                <table id="roleList" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>{{ 'Role.name.label'|trans|raw }}</th>
                            <th>{{ 'Role.description.label'|trans|raw }}</th>
                            <th>{{ 'Role.parents.label'|trans|raw }}</th>
                            <th>{{ 'Role.childs.label'|trans|raw }}</th>
                            <th>{{ 'Role.users.label'|trans|raw }}</th>
                            <th>{{ 'Action'|trans|raw }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% if roles|length != 0 %}
                        {% for role in roles %}
                        <tr>
                            <td>{{ role.name }}</td>
                            <td>{{ role.description|raw }}</td>
                            <td>
                                {%if role.parents|length==0%}
                                {{bsLabel('_NONE'|trans)}}
                                {%else%}
                                <ul class="list-unstyled">
                                {% for role in role.parents %}
                                    <li>{{role.name}}</li>
                                {% endfor %}
                                </ul>
                                {%endif%}
                            </td>
                            <td>
                                {%if role.childs|length==0%}
                                {{bsLabel('_NONE'|trans)}}
                                {%else%}
                                <ul class="list-unstyled">
                                {% for role in role.childs %}
                                    <li>{{role.name}}</li>
                                {% endfor %}
                                </ul>
                                {%endif%}
                            </td>
                            <td>
                                {{bsLabel(role.users|length)}}
                            </td>
                            <td>
                                <a class="btn btn-sm btn-info" href="{{path('_admin_role_editGet',{'id':role.id})}}">{{ glyphIco('edit') }} {{ 'Action.edit'|trans }}</a>
                                <a class="btn btn-sm btn-danger deleteConfirmRole" href="{{path('_admin_role_delete',{'id':role.id})}}">{{ glyphIco('trash') }} {{ 'Action.delete'|trans }}</a>
                            </td>
                        </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="6">{{ 'Role.empty'|trans|raw }}</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="deleteConfirmRole" class="modal fade in" tabindex="-1" style="display: none;">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 class="text-center">{{'Role.delete.confirm.title'|trans|raw}}</h3>
    </div>
    <div class="modal-body">
        {{'Role.delete.confirm.txt'|trans|raw}}
    </div>
    <div class="modal-footer">
        <a href="" class="btn btn-xs btn-danger danger">{{'_Yes'|trans|raw}}</a>
        <button type="button" class="btn btn-xs btn-default" data-dismiss="modal">{{'_No'|trans|raw}}</button>
    </div>
</div>
{%endblock content%}
